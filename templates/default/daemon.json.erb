{
    <% if node['hops']['gpu'].eql?("true") %>
    "default-runtime": "nvidia",
    "runtimes": {
        "nvidia": {
            "path": "nvidia-container-runtime",
	    "runtimeArgs": []
        }
    },
    <% end -%>
    "graph": "<%= node['hops']['docker_dir'] %>",
    "exec-opts": ["native.cgroupdriver=<%= node['hops']['cgroup-driver'] %>"],
    "log-driver": "json-file",
    "log-opts": {
      "max-size": "100m"
    },
    "storage-driver":  "overlay2"    
}
